<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <AssemblyName>TextViewer.Managed</AssemblyName>
    <RootNamespace>OpenSalamander.TextViewer</RootNamespace>
    <Nullable>enable</Nullable>
    <LangVersion>10.0</LangVersion>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
    <OutputPath>bin\$(Configuration)\</OutputPath>
    <ProjectGuid>{755CF63D-31EB-43B6-8402-2BB9D7D3E53F}</ProjectGuid>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="PrismSharp" Version="1.0.0-beta" GeneratePathProperty="true" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="..\\..\\..\\..\\src\\res\\viewer.ico" Link="Resources\\viewer.ico" />
  </ItemGroup>

  <Target Name="EnsureRestoreBeforeBuild"
          BeforeTargets="CollectPackageReferences;CollectPackageReferencesDesignTime;ResolveReferences;PrepareForBuild"
          Condition="'$(RestoreDuringBuild)' != 'true' and '$(ProjectAssetsFile)' != '' and !Exists('$(ProjectAssetsFile)')">
    <Message Text="Running implicit restore for $(MSBuildProjectName) (missing $(ProjectAssetsFile))."
             Importance="High" />
    <MSBuild Projects="$(MSBuildProjectFullPath)"
             Targets="Restore"
             Properties="RestoreDuringBuild=true" />
  </Target>

  <Target Name="CopyPrismSharpContent" AfterTargets="Build">
    <PropertyGroup>
      <PrismSharpContentRoot Condition="'$(PkgPrismSharp)' != ''">$(PkgPrismSharp)contentFiles\data\</PrismSharpContentRoot>
    </PropertyGroup>

    <ItemGroup Condition="Exists('$(PrismSharpContentRoot)languages\languages.json')">
      <PrismSharpLanguageFiles Include="$(PrismSharpContentRoot)languages\*.json" />
      <PrismSharpThemeFiles Include="$(PrismSharpContentRoot)themes\*.json" />
    </ItemGroup>

    <Copy SourceFiles="@(PrismSharpLanguageFiles)"
          DestinationFolder="$(OutputPath)data\languages\"
          SkipUnchangedFiles="true"
          Condition="@(PrismSharpLanguageFiles) != ''" />
    <Copy SourceFiles="@(PrismSharpThemeFiles)"
          DestinationFolder="$(OutputPath)data\themes\"
          SkipUnchangedFiles="true"
          Condition="@(PrismSharpThemeFiles) != ''" />
  </Target>
</Project>
